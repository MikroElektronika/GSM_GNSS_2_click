unit Click_GSM_GNSS_2_timer;

uses Click_GSM_GNSS_2_types;

var
    timerCounter : uint32_t; 
    
procedure Timer_interrupt(); iv IVT_INT_PIT0; 
procedure gsmgnss2_configTimer(); 

implementation

procedure gsmgnss2_configTimer(); 
begin
    SIM_SCGC6 := SIM_SCGC6 or (1 shl PIT); 
    NVIC_IntEnable(IVT_INT_PIT0); 
    PIT_MCR := 0x00; 
    PIT_LDVAL0 := 119999; 
    PIT_TCTRL0 := PIT_TCTRL0 or 2; 
    PIT_TCTRL0 := PIT_TCTRL0 or 1; 
    EnableInterrupts(); 
end;

procedure Timer_interrupt(); iv IVT_INT_PIT0; 
begin
    gsmgnss2_tick(); 
    PIT_TFLG0.TIF := 1; 
    inc(timerCounter);
end;

end.